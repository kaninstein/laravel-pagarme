PAGARME_WEBHOOK_SECRET=
PAGARME_WEBHOOK_SIGNATURE_ALGORITHM=sha256
PAGARME_WEBHOOK_SIGNATURE_HEADER=X-Hub-Signature-256

# Webhook URL para configuração automática
PAGARME_WEBHOOK_URL=https://seu-site.com/api/webhooks/pagarme

# Logging
PAGARME_LOGGING_ENABLED=false
PAGARME_LOGGING_CHANNEL=stack

# SubMerchant (Facilitadores de Pagamento)
