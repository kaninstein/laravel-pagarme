# Webhook Security Configuration
PAGARME_WEBHOOK_VALIDATION_ENABLED=true
PAGARME_WEBHOOK_VALIDATE_IN_LOCAL=false
PAGARME_WEBHOOK_TOLERANCE=300

# Webhook IP Whitelist (recomendado)
# Lista de IPs separados por vírgula
